# create/update .gitignore
cat > .gitignore << 'EOF'
# Node & package managers
node_modules/
.pnp.cjs
.pnpm-store/
.npm/
.yarn/
.yarn/cache/
.yarn/unplugged/
.yarn/build-state.yml
.yarn/install-state.gz

# Builds / caches
dist/
build/
out/
.next/
.turbo/
.cache/
.vite/
coverage/
*.log
*.pid
*.seed
*.tsbuildinfo
eslintcache
.vscode/
.idea/
.DS_Store
Thumbs.db

# Local env & secrets (never commit)
.env
.env.*
!.env.example

# Bolt & tooling artifacts (if any)
.bolt/tmp/
.bolt/cache/
EOF
